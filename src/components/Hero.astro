---
import { TOP_NAV_HEIGHT } from "@constants"
--- 
<div id="hero">
  <img class="background"></img> 
  <div class="content">
    <h1>Teste</h1>
  </div>
</div>

<style define:vars={{TOP_NAV_HEIGHT}}>
  img.background {
    background-image: url("../assets/bg.jpg");
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    -webkit-filter: grayscale(100%);
    filter: grayscale(100%);
    filter: brightness(50%);
  }
  #hero {
    width: 100%;
    min-height: 100vh;
  }
  .content {
    position: relative;
    width: 100%;
    height: 100vh;
    padding-top: var(--TOP_NAV_HEIGHT);
  }
  h1 {
    color: white;
  }
</style>