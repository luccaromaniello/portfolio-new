---
interface Props {
  label: string;
  href: string;
}

const { label, href } = Astro.props;
---

<a href={href} aria-label={label} target="_blank" rel="noopener noreferrer">
  <button
    type="button"
    class="w-full md:w-auto inline-block py-3 px-4 md:py-2 border-2 border-white rounded-sm shadow-[3px_3px_0_0_#AE1E5F]
      text-sm md:text-base text-center text-white uppercase font-semibold tracking-wide
      hover:bg-white hover:text-black cursor-pointer"
  >
    {label}
  </button>
</a>
