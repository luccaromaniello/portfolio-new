---
import SectionHeading from "@components/typography/SectionHeading.astro";
import ProjectCard from "@components/projects/ProjectCard.astro";
import {
  PROJECT_ODIN_LIVE_URL,
  PROJECT_ODIN_REPO_URL,
  PROJECT_DESIGN_LIVE_URL,
} from "@constants";
import designArchiveImage from "@assets/overview-v0-portfolio.png";
import topImage from "@assets/placeholder-top.png";
---

<div id="projects" class="flex flex-col gap-12 items-center py-40">
  <SectionHeading title="Selected work" />
  <div class="flex flex-col gap-8 md:gap-40 px-32">
    <ProjectCard
      title="The Odin Project"
      description="A collection of 27 challenges created during The Odin Project, a full‑stack web‑development curriculum."
      website={{ href: PROJECT_ODIN_LIVE_URL }}
      repository={PROJECT_ODIN_REPO_URL}
      image={{
        src: topImage,
        alt: "An overview of The Odin Project's website.",
      }}
    />
    <ProjectCard
      title="Design Archive"
      description=`The first version of this portfolio showcases my past design work.
        Some items are password protected, but I’m happy to provide access upon
        request.`
      website={{ href: PROJECT_DESIGN_LIVE_URL, external: true }}
      image={{
        src: designArchiveImage,
        alt: "An overview of the first version of Lucca's portfolio.",
      }}
      even
    />
  </div>
</div>
