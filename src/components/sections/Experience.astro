---
import SectionHeading from "@components/typography/SectionHeading.astro";
import WorkExperience from "@components/content/WorkExperience.astro";
import { workExperience } from "@data/experienceData";
---

<section class="flex flex-col gap-12 items-center py-12 md:py-40">
  <SectionHeading title="Work experience" />
  <div
    class="flex flex-col gap-20 md:gap-30 lg:gap-40 px-2 lg:px-32 text-white"
  >
    {
      workExperience.map((experience, index) => (
        <WorkExperience experience={experience} />
      ))
    }
  </div>
</section>
